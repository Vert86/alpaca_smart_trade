# Alpaca API Credentials
# Get your credentials from: https://app.alpaca.markets/paper/dashboard/overview
ALPACA_API_KEY=your_api_key_here
ALPACA_SECRET_KEY=your_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Use paper trading for testing

# Telegram Bot Configuration
# Create a bot with @BotFather on Telegram to get the token
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_PORT=5000

# Trading Configuration
DEFAULT_STOCKS=NVDA,MSFT,AMZN,GOOGL,TSLA,UNH,CRWD,V,ASML,PLTR
MAX_POSITION_SIZE=0.10  # Maximum 10% of portfolio per position
MIN_ACCOUNT_BALANCE=1000  # Minimum account balance in USD
ENABLE_PDT_PROTECTION=True  # Pattern Day Trading protection

# Analysis Configuration
LOOKBACK_DAYS=60  # Days of historical data for analysis
REGIME_PERIODS=20,50,200  # SMA periods for regime detection
WALK_FORWARD_TRAIN_DAYS=30  # Training period for walk-forward
WALK_FORWARD_TEST_DAYS=5  # Testing period for walk-forward
